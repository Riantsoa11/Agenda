            <Grid Grid.Column="1">
                <TextBox HorizontalAlignment="Center" Height="25" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="359" Name="TB_Age"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <TextBlock  Height="15"  TextWrapping="Wrap" Text="Sexe" HorizontalAlignment="Center" VerticalAlignment="Center" Width="242" TextAlignment="Center"/>
            </Grid>
            <Grid Grid.Column="1">
                <TextBox HorizontalAlignment="Center" Height="25" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="359" Name="TB_Sexe"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <TextBlock  Height="15"  TextWrapping="Wrap" Text="Date de Naissance" HorizontalAlignment="Center" VerticalAlignment="Center" Width="242" TextAlignment="Center"/>
            </Grid>
            <Grid Grid.Column="1">
                <DatePicker Width="365" Name="TB_Date_naissance"></DatePicker>
            </Grid>
        </Grid>
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
