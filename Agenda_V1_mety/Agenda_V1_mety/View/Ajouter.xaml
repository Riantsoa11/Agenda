                <TextBox HorizontalAlignment="Center" Height="25" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="359" Name="TB_Email"/>

            </Grid>
        </Grid>
        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <TextBlock  Height="15"  TextWrapping="Wrap" Text="Phone" HorizontalAlignment="Center" VerticalAlignment="Center" Width="242" TextAlignment="Center"/>
            </Grid>
            <Grid Grid.Column="1">
