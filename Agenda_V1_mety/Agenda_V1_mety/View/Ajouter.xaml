            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <TextBlock  Height="15"  TextWrapping="Wrap" Text="reseau" HorizontalAlignment="Center" VerticalAlignment="Center" Width="242" TextAlignment="Center"/>
            </Grid>
            <Grid Grid.Column="1">
                <TextBox HorizontalAlignment="Center" Height="25" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="359" Name="TB_Reseau" />
            </Grid>
        </Grid>
        <Grid Grid.Row="11">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Button Content="Retour" HorizontalAlignment="Left" Height="40" Margin="109,19,0,0" VerticalAlignment="Top" Width="161" Click="Retour_Click"/>
            </Grid>
            <Grid Grid.Column="1">
                <Button Content="Ajouter" HorizontalAlignment="Left" Height="40" Margin="109,19,0,0" VerticalAlignment="Top" Width="161" Click="Ajouter_Click"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
